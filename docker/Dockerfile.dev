FROM node:18-alpine

RUN mkdir -p /usr/src/app
WORKDIR /usr/src/app

COPY package.json /usr/src/app
COPY yarn.lock /usr/src/app

RUN yarn

COPY . /usr/src/app

ARG DATABASE_MONGODB_ENDPOINT
ARG AUTH_JWT_SECRET
ARG TWITTER_BEARER
ARG APTOS_PRIVATE_KEY
ARG ELASTICSEARCH_ENDPOINT
ARG ELASTICSEARCH_AUTH_USERNAME
ARG ELASTICSEARCH_AUTH_PASSWORD
ARG ELASTICSEARCH_LOG_INDEX

ENV DATABASE_MONGODB_ENDPOINT ${DATABASE_MONGODB_ENDPOINT}
ENV AUTH_JWT_SECRET ${AUTH_JWT_SECRET}
ENV TWITTER_BEARER ${TWITTER_BEARER}
ENV APTOS_PRIVATE_KEY ${APTOS_PRIVATE_KEY}
ENV ELASTICSEARCH_ENDPOINT
ENV ELASTICSEARCH_AUTH_USERNAME
ENV ELASTICSEARCH_AUTH_PASSWORD
ENV ELASTICSEARCH_LOG_INDEX

RUN yarn build

EXPOSE 3000

CMD [ "yarn", "start:dev" ]